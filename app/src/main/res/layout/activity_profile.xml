<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.catchforms.vinod.rupesh.profile"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <LinearLayout
        android:id="@+id/call_rating"
        android:orientation="vertical"
        android:background="@drawable/pp"
        android:layout_width="match_parent"
        android:layout_weight="1.4"
        android:alpha="0.8"
        android:layout_height="match_parent"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:elevation="5dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:src="@color/colorPrimaryDark"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepage_imag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:src="@drawable/ic_person_black_24dp"/>


    </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RatingBar
                android:layout_gravity="end"
                android:id="@+id/MyRating"
                android:padding="10dp"
                android:paddingLeft="10dp"
                style="@style/customRatingBar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:rating="1"
                android:backgroundTint="@color/golden"
                android:progressTint="@color/golden"
                android:secondaryProgressTint="@color/golden"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.25"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_name"
                android:text="Name"
                android:elevation="5dp"
                android:padding="8dp"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/edit_profile"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:text="Edit Profile"-->
                <!--android:elevation="5dp"-->
                <!--android:clickable="true"-->
                <!--android:textSize="20dp"-->
                <!--android:textColor="#fff"-->
                <!--/>-->
        </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical|horizontal"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@color/Silver"
        >
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/Silver"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:padding="13dp"
            android:elevation="5dp"
            android:textColor="@color/black"
            android:text="Mobile number"/>
        <TextView
            android:id="@+id/profile_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="15dp"
            android:elevation="5dp"
            android:padding="13dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:text="Center name"/>
        <TextView
            android:id="@+id/profile_center_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="15dp"
            android:elevation="5dp"
            android:layout_marginTop="2dp"
            android:padding="13dp"
            android:textColor="@color/black"
            android:text="Center Address"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="15dp"
            android:elevation="5dp"
            android:layout_marginTop="2dp"
            android:padding="13dp"
            android:textColor="@color/black"
            android:text="Center Type"/>
        <ListView
            android:id="@+id/centertype"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="100dp"
            android:scrollbars="vertical"
            ></ListView>
        <TextView
            android:id="@+id/profilepage_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textSize="15dp"
            android:elevation="5dp"
            android:layout_marginTop="2dp"
            android:padding="13dp"
            android:textColor="@color/black"
            android:text="Rest"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/profile_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Edit"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@drawable/cyber"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/profile_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delete"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@color/Red"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>